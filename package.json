{
  "name": "@digitalbazaar/bbs-signatures",
  "version": "0.0.1-0",
  "description": "A JavasSript BBS Signatures Implementation",
  "homepage": "https://github.com/digitalbazaar/bbs-signatures",
  "repository": {
    "type": "git",
    "url": "https://github.com/digitalbazaar/bbs-signatures"
  },
  "license": "BSD-3-Clause",
  "type": "module",
  "exports": "./lib/index.js",
  "browser": {
    "./lib/crypto.js": "./lib/crypto-browser.js"
  },
  "files": [
    "lib/**/*.js"
  ],
  "dependencies": {
    "@noble/curves": "^1.3.0"
  },
  "devDependencies": {
    "c8": "^9.0.0",
    "chai": "^4.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.16.0",
    "eslint-config-digitalbazaar": "^5.0.1",
    "eslint-plugin-jsdoc": "^48.0.2",
    "eslint-plugin-unicorn": "^50.0.1",
    "karma": "^6.3.20",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.4.0",
    "karma-webpack": "^5.0.0",
    "mocha": "^10.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "varint": "^6.0.0",
    "webpack": "^5.72.1"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "test": "npm run test-node",
    "test-karma": "karma start karma.conf.cjs",
    "test-node": "cross-env NODE_ENV=test mocha --preserve-symlinks -t 10000 test/**/*.spec.js",
    "coverage": "cross-env NODE_ENV=test c8 npm run test-node",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly --reporter=text-summary --reporter=text npm run test-node",
    "coverage-report": "c8 report",
    "lint": "eslint ."
  },
  "c8": {
    "reporter": [
      "lcov",
      "text-summary",
      "text"
    ]
  }
}
